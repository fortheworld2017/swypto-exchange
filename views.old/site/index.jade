extends ../layout

block content
  .main-content(role='main')
    .hero-unit
      h1.taglinebig SWYPTO
      h1.tagline The Fast, Secure and Reliable Cryptocurrency Exchange
      - if (!user)
        a(href='/signup').bord_but Get Started Now
  #bg_full_white
      #features
        .wrapper.forcover
          h2.top_text OUR SPECIALTIES
          //p.tagline Lorem ipsum dolor sit amet, consectetur adipiscing elit
          ul.feature-list
            li.feature-item
              img(src="/img/hero/coins3.png", alt="Easy Trading").feature-img
              .feature-text Easy Trading
            li.feature-item
              img(src="/img/hero/safe.svg", alt="Bank-Grade Security").feature-img
              .feature-text Bank-Grade Security
            li.feature-item
              img(src="/img/hero/save.svg", alt="Low Fees").feature-img
              .feature-text Low Fees
            li.feature-item
              img(src="/img/hero/support.svg", alt="Fast Support").feature-img
              .feature-text Fast Support
      #contentgrey
        .wrapper.forcover_content    
          h2.top_text.market ALL MARKETS
          section#market-list.container
            table.trade-data
              tr
                th Market
                th Coin Name
                th Last Price
                th Volume (24h)
                th Change (24h)
              - each info, type in marketStats
                - if (info.label)
                  tr
                    td <a href="/trade/#{type.replace("_", "/")}">#{type.replace("_", "/")}</a>
                    td #{currencies[info.label]}
                    - if (info.status === "disabled")
                      td ON HOLD
                    - else
                      td #{_str.toFixed(info.last_price)}
                    td #{_str.toFixed(info.volume1)} #{type.split("_")[0]}
                    -var growthRatio = _str.roundTo(info.growth_ratio, 2)
                    td(class="rate #{growthRatio > 0 ? 'up' : ''} #{growthRatio < 0 ? 'down' : ''} #{growthRatio == 0 ? 'none' : ''}") #{_str.toFixed(Math.abs(growthRatio), 2)}%    
      #contentwhite
        .wrapper.two_blocks
          .left_block    
            h2.top_text.XWBC XWBC MARKETS
            //p.tagline Lorem ipsum dolor sit amet, consectetur adipiscing elit
            include _market-ticker
          .right_block    
            h2.top_text.SALES TOTAL SALES
            //p.tagline Lorem ipsum dolor sit amet, consectetur adipiscing elit
            #coin-stats.coin-stats
              - var totalVolume = 0;
              - each info, type in marketStats
                - if (info.label) totalVolume = totalVolume + info.volume2
              .con-header
                h2.con-header-title TOTAL SALES
              ul
                li.volume
                  label Total Volume:
                  div #{_str.toFixed(totalVolume, 4)} xWBC
                li.trades
                  label Total Trades:
                  div #{tradesCount}


      #contentgrey 
        .wrapper.forcover_content
          h2.top_text.news Announcements
          .induvidual_news_section
