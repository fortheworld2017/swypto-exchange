div.page-head-simple-top
  .wrapper
    -if (marketStats)
      .coin_price
        span.lefttexttop
          |LXCCoin Price :
          - var coinStats = marketStats['XWBC_USD'];

        span.boldtext
          -if(coinStats)
              |#{coinStats.last_price} &euro;
header.page-head
  .wrapper
    .test
      a(href="/", title="Return to homepage").site-logo
        img(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==", alt="Swypto").coinnext-logo
      nav.site-nav
        ul.nav
          li: a(href='/', class=(page === 'home' ? 'active' : '')) Home
          li: a(href='/trade', class=(page === 'trade' ? 'active' : '')) Trade
          li: a(href='/funds/USD', class=(page === 'funds' ? 'active' : '')) Deposit
          li: a(href='/buy', class=(page === 'buy' ? 'active' : '')) Buy Lxccoin
          li: a(href='/withdrawal', class=(page === 'withdrawal' ? 'active' : '')) Withdrawal
          li: a(href="/settings/profile/edit", class=(helper.profileActive(page) == 1 ? 'active' : '')) Account
          - if (user)
            li.dropdown
              a(href="/settings/profile/edit").dropdown-toggle
                | #{user.email}
                .caret
              ul.dropdown-menu
                li: a(href="/support") Support
                li: a(href='/logout') Logout
          - else
            nav.auth-nav
              ul.nav
                li: a(href='/signup') Signup
                li: a(href='/login').btn.white Login
